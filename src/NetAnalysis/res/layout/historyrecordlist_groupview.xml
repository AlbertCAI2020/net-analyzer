<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">
    
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
        
        <TextView
	        android:id="@+id/date"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#808080"
		    android:textSize="24sp"
		    android:text="2016-04-01"/>
        
    </LinearLayout>
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:paddingBottom="5dp"
	    android:paddingTop="5dp" >
	    
		<TextView
	   	    android:id="@+id/item1"
	   	    android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_alignParentStart="true"    
	    	android:layout_alignParentLeft="true"	
	    	android:layout_centerVertical="true"
	    	android:text=""
	   	    android:textSize="15sp"
	   	    android:textColor="#808080" />
		
		<CheckBox
		    android:id="@+id/item4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentEnd="true"    
	    	android:layout_alignParentRight="true"/>
		
		<TextView
	   	    android:id="@+id/item3"
	   	    android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_toLeftOf="@id/item4"
	    	android:layout_toStartOf="@id/item4"
	    	android:layout_centerVertical="true"
	    	android:layout_alignWithParentIfMissing="true"
	    	android:textColor="#808080" 
	    	android:textSize="15sp"/>
		
		<TextView
	   	    android:id="@+id/item2" 
	   	    android:layout_marginStart="8dp"
	   	    android:layout_marginLeft="8dp"   	    
	   	    android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_toEndOf="@id/item1"
	    	android:layout_toRightOf="@id/item1"
	    	android:layout_toStartOf="@id/item3"
	    	android:layout_toLeftOf="@id/item3"
	    	android:layout_centerVertical="true"
	    	android:text=""
	   	    android:textSize="18sp"
	   	    android:singleLine="true"/>
		
	</RelativeLayout>

</LinearLayout>
